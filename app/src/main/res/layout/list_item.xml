<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

  <TextView
      android:id="@+id/charCode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="CharCode"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Rate"
        app:layout_constraintEnd_toStartOf="@+id/up"
        app:layout_constraintStart_toEndOf="@+id/charCode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charCode" />

  <TextView
      android:id="@+id/scale"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:maxLines="3"
      android:text="Scale"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/charCode"
      app:layout_goneMarginTop="0dp" />

  <ImageView
      android:id="@+id/up"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:contentDescription="@null"
      app:layout_constraintBottom_toBottomOf="@+id/charCode"
      app:layout_constraintEnd_toStartOf="@+id/down"
      app:layout_constraintTop_toTopOf="@+id/charCode"
      app:srcCompat="@drawable/ic_up"
      tools:ignore="VectorDrawableCompat" />

  <ImageView
      android:id="@+id/down"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:contentDescription="@null"
      app:layout_constraintBottom_toBottomOf="@+id/charCode"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/charCode"
      app:srcCompat="@drawable/ic_down"
      tools:ignore="VectorDrawableCompat" />

</android.support.constraint.ConstraintLayout>
